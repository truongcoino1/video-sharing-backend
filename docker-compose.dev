version: "3"

services:
  postgres:
    image: postgres:14.1-alpine
    restart: always
    environment:
      - POSTGRES_PASSWORD=123qwe
    ports:
      - "5432:5432"
  backend:
    build:
      context: .
      dockerfile: ${DOCKER_FILE}
    command: yarn dev
    volumes:
      - ./:/app:cached
    # restart: always
    ports:
      - ${PORT}:${PORT}
    environment:
      - TZ=Asia/Ho_Chi_Minh
      - PORT=${PORT}
    depends_on:
      - postgres

