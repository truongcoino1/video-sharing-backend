{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./build",
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "strict": true,
    "typeRoots": ["./src/types"],
    "types": ["node"],
    "skipLibCheck": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}
